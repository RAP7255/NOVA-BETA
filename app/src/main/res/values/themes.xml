<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NovaApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccentStatic">@color/sos_red</item>
        <item name="colorPrimary">@color/primary_color_static</item>

        <item name="background_color_dynamic">@color/background_color_light</item>
        <item name="card_background_dynamic">@color/card_background_light</item>
        <item name="text_primary_dynamic">@color/text_primary_light</item>
        <item name="text_secondary_dynamic">@color/text_secondary_light</item>

        <item name="isLightTheme">true</item>
    </style>

    <style name="Theme.NovaApp.Night" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccentStatic">@color/sos_red</item>
        <item name="colorPrimary">@color/primary_color_static</item>

        <item name="background_color_dynamic">@color/background_color_dark</item>
        <item name="card_background_dynamic">@color/card_background_dark</item>
        <item name="text_primary_dynamic">@color/text_primary_dark</item>
        <item name="text_secondary_dynamic">@color/text_secondary_dark</item>

        <item name="isLightTheme">false</item>
    </style>
</resources>