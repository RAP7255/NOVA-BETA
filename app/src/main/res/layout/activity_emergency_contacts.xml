<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/callPolice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Police (100)"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/callAmbulance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambulance (108)"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/callFire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fire Brigade (101)"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/callAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/callResponsible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responsible Person"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>
