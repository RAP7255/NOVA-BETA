<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color_dynamic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- TITLE BAR WITH INFO BUTTON + THEME SWITCH -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <!-- INFO BUTTON -->
            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="?attr/colorPrimary"
                android:contentDescription="App Info" />

            <!-- APP TITLE -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="NOVA"
                android:textColor="?attr/colorPrimary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- THEME SWITCH -->
            <Switch
                android:id="@+id/theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:thumbTint="?attr/colorPrimary"
                android:trackTint="?attr/text_secondary_dynamic"
                android:contentDescription="Dark Mode Toggle" />

        </RelativeLayout>

        <!-- SUBTITLE -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay safe and connected"
            android:textColor="?attr/text_secondary_dynamic"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- SOS BUTTON -->
        <Button
            android:id="@+id/btnSOS"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/sos_button_shape"
            android:text="SOS"
            android:textColor="?attr/text_primary_dynamic"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:elevation="12dp" />

        <!-- ACTION BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:weightSum="3">

            <!-- CALL -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnCall"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/call_red"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="@color/text_primary_dark"
                    android:contentDescription="Emergency Call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textColor="?attr/text_primary_dynamic"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- LOCATION -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnLocation"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/location_orange"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="@color/text_primary_dark"
                    android:contentDescription="Send Location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Location"
                    android:textColor="?attr/text_primary_dynamic"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- CONTACTS -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnContacts"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/contacts_blue"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@color/text_primary_dark"
                    android:contentDescription="Contacts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    android:textColor="?attr/text_primary_dynamic"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- SYSTEM STATUS CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/card_background_dynamic"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/status_dot"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="System Active"
                    android:textColor="?attr/text_primary_dynamic"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textColor="@color/status_green"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RECENT ALERTS TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Alerts"
            android:textColor="?attr/text_primary_dynamic"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- ALERTS LIST -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="24dp" />

        <!-- FOOTER -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="© TEAM NOVA 2025 — All Rights Reserved"
            android:textAlignment="center"
            android:textColor="?attr/text_secondary_dynamic"
            android:padding="16dp"
            android:textSize="12sp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
